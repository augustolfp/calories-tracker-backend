// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  createdAt DateTime @default(now())
  meals Meals[]
  countedDays CountedDays[]
  @@map("users")
}

model Meals {
  id Int @id @default(autoincrement())
  name String
  description String
  createdAt DateTime @default(now())
  user Users @relation(fields: [userId], references: [id])
  userId Int
  ingredients Ingredients[]
  countedDaysMeals CountedDaysMeals[]
  @@map("meals")
}

model Ingredients {
  id Int @id @default(autoincrement())
  name String
  meal Meals @relation(fields: [mealId], references: [id])
  mealId Int
  weightInGrams Float
  carbsInGrams Float
  fatsInGrams Float
  proteinsInGrams Float
  kcals Float
  @@map("ingredients")
}

model CountedDays {
  id Int @id @default(autoincrement())
  day DateTime
  notes String
  user Users @relation(fields: [userId], references: [id])
  userId Int
  countedDaysMeals CountedDaysMeals[]
  @@map("countedDays")
}

model CountedDaysMeals {
  id Int @id @default(autoincrement())
  countedDay CountedDays @relation(fields: [countedDayId], references: [id])
  countedDayId Int
  meal Meals @relation(fields: [mealId], references: [id])
  mealId Int
  @@map("countedDaysMeals")
}

model TacoTable {
  id Int @id @default(autoincrement())
  description String
  baseQty Float
  baseUnit String
  proteins Float
  proteinUnit String
  carbs Float
  carbUnit String
  fats Float
  fatUnit String
  kcals Float
  @@map("tacoTable")
}