// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  createdAt DateTime @default(now())
  countedDays CountedDays[]
  @@map("users")
}

model Meals {
  id Int @id @default(autoincrement())
  name String
  description String?
  createdAt DateTime @default(now())
  ingredients Ingredients[]
  countedDay CountedDays @relation(fields: [countedDayId], references: [id])
  countedDayId Int
  @@map("meals")
}

model Ingredients {
  id Int @id @default(autoincrement())
  name String
  meal Meals @relation(fields: [mealId], references: [id])
  mealId Int
  weight Float
  carbs Float
  fats Float
  proteins Float
  kcals Float
  @@map("ingredients")
}

model CountedDays {
  id Int @id @default(autoincrement())
  day DateTime @db.Date
  notes String?
  user Users @relation(fields: [userId], references: [id])
  userId Int
  caloriesTarget Int
  proteinsTarget Int
  meals Meals[]
  @@map("countedDays")
}

model TacoTable {
  id Int @id @default(autoincrement())
  description String
  baseQty Float
  proteins Float
  carbs Float
  fats Float
  kcals Float
  @@map("tacoTable")
}